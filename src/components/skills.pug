script(type='text/x-template')#skills-template
  ul.skills(ref='skills-block')
    li.skills__item(v-for="skill in skills")
      row(
        :skill="skill"
      )

script(type='text/x-template')#skills-row
  .skills__row
    h4.skills__title {{ skill.skillsType }}
    ul.skills__list
      li.skills__row-item(v-for="(skillPercent, skillName) in skill.skills")
        skill(
          :skillPercent="skillPercent",
          :skillName="skillName"
        )

script(type='text/x-template')#skill
  .skill
    .skills__item-text {{ skillName }}
    svg.skills-circle(viewBox='0 0 100 100')
      circle.circle.circle_under(cx='50', cy='50', r='40')
      circle.circle.circle_above(cx='50', cy='50', r='40', stroke='url(#gradient)', ref='circle')
      linearGradient(id='gradient', x1='0%', y1='0%', x2='100%', y2='0%')
        stop(offset='0%', stop-color='#ad00ed')
        stop(offset='100%', stop-color='#5500f2')

