script(type='text/x-template')#slider-template
  .slider
    display(
      :works="works"
      :currentWork="currentWork"
      @slide="handleSlide"
      :currentIndex="currentIndex"
    )
    description(
      :currentWork="currentWork"
    )

script(type='text/x-template')#slider-display
  .slider__display(:data-slide="currentIndex + 1")
    .slider__display-full-img
      img(:src="currentWork.slide", alt='slider__display').slider__display-pic
    reviews(
      :works="reversedWorks"
      :currentWork="currentWork"
    )
    btns(
      @slide="direction => $emit('slide', direction)"
    )

script(type='text/x-template')#slider-reviews
  ul.slider__preview
    li.slider__preview-item(v-for="work in works")
      a.slider__preview-link(:class="{active: work.id === currentWork.id}" href='#')
        img(:src="work.slide", alt='slider__preview').slider__preview-pic


script(type='text/x-template')#slider-btn
  .slider__controls
    button(@click="$emit('slide', 'next')", type='button').slider__btn.slider__btn_next.active
    button(@click="$emit('slide', 'prev')", type='button').slider__btn.slider__btn_prev

script(type='text/x-template')#slider-desc
  .slider__desc
    tags(
      :tags="tagsArray"
    )
    .slider__title.subtitle {{currentWork.title}}
    .slider__text.text 
      p {{currentWork.desc}}
    a(:href="currentWork.link").slider__link Посмотреть сайт

script(type='text/x-template')#slider-tags
  ul.slider__tags
    li.slider__tags-item(v-for="tag in tags") {{tag}}




