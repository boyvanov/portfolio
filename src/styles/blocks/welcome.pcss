.welcome {
  &__container {
    height: 100%;
    align-items: center;
    justify-content: center;
  }
}

.welcome__name {
  display: flex;
  flex: 0.83;
  padding: 0 30%;
  align-items: center;
  justify-content: center;
  padding-bottom: 1%;

  @include desktop {
    padding: 26.5% 20%;
    padding-bottom: 0;
    padding-top: 7%;
    flex: 0.87;
  }

  @include tablets {
    padding: 27% 20%;
    align-items: flex-start;
  }
}

.welcome__scroll {
  @include desktop {
    margin-left: 5%;
  }

  @include tablets {
    display: none;
  }
}

.welcome {
  .name {
    @include desktop {
      flex-direction: row;
      align-items: flex-start;
      text-align: left;
    }

    @include tablets {
      flex-direction: column;
      text-align: center;
      align-items: center;
    }
  }

  .name__text {
    font-size: 18px;
    font-weight: 600;
    line-height: 1.67;
    opacity: 0.4;
    width: 45%;
    padding-bottom: 3%;

    @include desktop {
      flex-direction: row;
      align-items: flex-start;
      text-align: right;
      margin-right: 9%;
      margin-top: 1%;
    }

    @include tablets {
      margin: 0;
      text-align: center;
      align-items: center;
      padding-bottom: 5%;
    }
  }

  .name__title {
    font-size: 72px;
    font-weight: 800;
    line-height: 1.1;

    @include tablets {
      font-size: 55px;
    }
  }
}
