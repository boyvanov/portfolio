.widget {
  position: relative;
}

.widget__controls {
  display: flex;
  position: absolute;
  top: -61%;
  left: 40%;
}

.widget__btn {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  border: 1px solid $text-color;
  margin-right: 30px;
  background: svg-load(
    "arrow-down.svg",
    fill=$text-color,
    width=9px,
    height=15px
  );
  background-position: 50%;
  background-repeat: no-repeat;
  outline: none;

  &:last-child {
    margin-right: 0;
  }

  &_prev {
    transform: rotate(180deg);
  }

  &:hover {
    border-color: $hover-color;
    background-image: svg-load(
      "arrow-down.svg",
      fill=$hover-color,
      width=9px,
      height=15px
    );
  }
}

.widget__list {
  display: flex;
  width: 69%;
}

.widget__item {
  width: 50%;
  display: flex;
  flex-direction: column;
  /* margin-right: 10.5%; */
  position: relative;
  padding-left: 13%;

  &:last-child {
    margin-right: 0;
  }

  &:before {
    content: "";
    position: absolute;
    display: block;
    width: 75px;
    height: 65px;
    left: 0%;
    top: 3%;
    background: svg-load(
      "quote.svg",
      fill=$text-color,
      width=100%,
      height=100%
    );
    @include bgcover;
    opacity: 0.05;
  }
}

.widget__text {
  min-height: 130px;
}

.widget__user {
  display: flex;
  align-items: center;
  margin-top: 3%;
}

.widget__avatar {
  width: 75px;
  height: 75px;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 10%;
}

.widget__avatar-pic {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: top;
}

.widget__user-name {
  font-size: 18px;
  font-weight: 700;
  margin-bottom: 6%;
}
