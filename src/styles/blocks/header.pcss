.header {
  position: absolute;
  left: 0;
  right: 0;

  &__container {
    justify-content: space-between;
    align-items: center;
    flex-direction: row;
    height: 100%;
  }
}

.header {
  .socials__icon {
    fill: $text-color;

    &:hover {
      fill: $hover-color;
    }
  }
}

